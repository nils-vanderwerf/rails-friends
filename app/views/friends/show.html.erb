<div class="p-5 mb-4 bg-light rounded-3">
      <div class="container-fluid py-5 jumbotron">
        <h1 class="display-5 fw-bold">
        <%= @friend.first_name %>
        <%= @friend.last_name %>
        </h1>
        <p><strong>Email: </strong> <%= @friend.email %> |
        <strong>Phone: </strong> <%= @friend.phone %> |
        <strong>Twitter: </strong> <%= @friend.twitter %></p>

        </br>
        
        <%= link_to "Edit this friend", edit_friend_path(@friend), class: "btn btn-secondary mb-3" %> |
        <%= link_to "Back to friends", friends_path, class: "btn btn-secondary mb-3" %>
      
        <%= button_to "Delete", @friend, method: :delete, class: "btn btn-secondary" %>
      </div>
    </div>

